#home .ivu-layout 
  position relative
  min-height 100%
  overflow hidden

#home .ivu-layout-header
  position fixed
  left 0
  top 0
  z-index 10
  width 100%
  height 60px
  background rgba(0,0,0,.5)
  background-size 100% 200px
  box-shadow 0 0 5px rgba(0,0,0,.8)
#home .ivu-layout-header .ivu-menu
  width 1200px
  margin 0 auto
  background transparent

#home .layout-logo 
  float left
  padding-left 70px
  margin-top 15px
  width 100px
  height 30px
  line-height 30px
  background url("../image/icon/logo-white.png") no-repeat 0 center
  background-size 60px
  cursor pointer

#home .layout-nav
  float right

#home .ivu-menu-item
  font-size 1rem
#home .ivu-menu-item:hover
  border-bottom 2px solid rgba(255,255,255,.3)
#home .ivu-select-dropdown
  background rgba(0,0,0,.5)
#home .ivu-menu-item-group-title
  display none
#home .ivu-select-dropdown  .ivu-menu-item
  color #fff
#home .ivu-select-dropdown  .ivu-menu-item:hover
  background rgba(0,0,0,.5)
  border-bottom none

  
#home .banner
  position relative
  height 450px
  padding 160px 0
  background url("../image/home-banner2.jpg") no-repeat center center
  background-size cover
  text-align center
  color #fff
  overflow hidden

#home .banner h1
  margin-top 1rem
  font-weight normal
  font-size 2rem
#home .banner:before
  content ' '
  position absolute
  left 0
  bottom 0
  width 100%
  height 150px
  background  linear-gradient(-164deg, rgba(245,33,33,0) 80%, rgba(255,255,255,.05) 15%),
          linear-gradient(-174deg, rgba(27,0,255,0) 73%, rgba(255,255,255,.05) 15%),
          linear-gradient(173deg, rgba(255,33,33,0) 65%, rgba(255,255,255,.05) 15%)
  background-repeat repeat-x


#home .btn 
  padding 8px 6rem
  margin-top 2rem
  font-size 1rem
  border-radius 0
  letter-spacing 2px
  transition all 1s linear
#home .bg-btn
  color #fff
#home .bg-btn:hover
  color #fff
  background #fff
  color #666
  border 1px solid #fff
#home .ivu-card-head
  border-bottom none
#home .ivu-card-head p
  font-size 1.2rem
  font-weight normal
#home .ivu-card-body p
  line-height 18px
  margin-top 5px
#home .ivu-card-body p i
  line-height 18px


#home .spe-card
  background transparent
  text-align center
#home .spe-card .ivu-card-body p
  margin-top 1.5rem
#home .spe-card .ivu-card-body p i
  margin-right 10px
#home .spe-card .ivu-card-body .btn
  margin-top 4rem

#home .contact-box
  width 800px
  margin 0 auto
#home .contact-box .ivu-card
  text-align center
#home .contact-box .ivu-card-body p
  color #fff
  margin-top 1rem
#home .contact-box .ivu-card-body p a
  color #fff
  text-decoration underline


#home .ivu-layout-footer
  text-align center
  font-size 12px

#home .split-line
  margin 0 5px
  color #5cadff