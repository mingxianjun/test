//页面最外层盒子
.ivu-layout
  position relative
  min-height 100%
  overflow hidden
//页头
.ivu-layout-header
  position fixed
  left 0
  top 0
  z-index 10
  width 100%
  height 60px
  background rgba(0,0,0,.5)!important
  background-size 100% 200px
  box-shadow 0 0 5px rgba(0,0,0,.8)
  .ivu-menu
    width 1200px
    margin 0 auto
    background transparent
  .layout-logo
    float left
    padding-left 70px
    margin-top 15px
    width 100px
    height 30px
    line-height 30px
    background url("../images/icon/logo-white.png") no-repeat 0 center
    background-size 60px
    cursor pointer
  .layout-nav
    float right
  .ivu-menu-item
    font-size 1rem
  .ivu-menu-item:hover
    border-bottom 2px solid rgba(255,255,255,.3)
  .ivu-select-dropdown
    background rgba(0,0,0,.5)
  .ivu-menu-item-group-title
    display none
  .ivu-select-dropdown  .ivu-menu-item
    color #fff!important
  .ivu-select-dropdown  .ivu-menu-item:hover
    color #666!important
    background rgba(0,0,0,.5)
    border-bottom none



//首页内容
#home
  .banner
    position relative
    height 450px
    padding 160px 0
    background url("../images/home-banner2.jpg") no-repeat center center
    background-size cover
    text-align center
    color #fff
    overflow hidden

  .banner
    h1
      margin-top 1rem
      font-weight normal
      font-size 2rem
  .banner:before
    content ' '
    position absolute
    left 0
    bottom 0
    width 100%
    height 150px
    background  linear-gradient(-164deg, rgba(245,33,33,0) 80%, rgba(255,255,255,.05) 15%),
            linear-gradient(-174deg, rgba(27,0,255,0) 73%, rgba(255,255,255,.05) 15%),
            linear-gradient(173deg, rgba(255,33,33,0) 65%, rgba(255,255,255,.05) 15%)
    background-repeat repeat-x
  .btn
    padding 8px 6rem
    margin-top 2rem
    font-size 1rem
    border-radius 0
    letter-spacing 2px
    transition all 1s linear
  .bg-btn
    color #fff
  .bg-btn:hover
    color #fff
    background #fff
    color #666
    border 1px solid #fff
  .ivu-card-head
    border-bottom none
    p
      font-size 1.2rem
      font-weight normal
  .ivu-card-body
    p
      line-height 18px
      margin-top 5px
      i
        line-height 18px
  .spe-card
    background transparent
    text-align center
    .ivu-card-body p
      margin-top 1.5rem
    .ivu-card-body p i
      margin-right 10px
    .ivu-card-body .btn
      margin-top 4rem
  .contact-box
    width 800px
    margin 0 auto
    .ivu-card
      text-align center
    .ivu-card-body p
      color #fff
      margin-top 1rem
    .ivu-card-body p a
      color #fff
      text-decoration underline


//页脚
.ivu-layout-footer
  text-align center
  font-size 12px
  .split-line
    margin 0 5px
    color #5cadff

//捐赠页面
#donation
  .ivu-layout-content
    padding-top 64px
    width 800px
    margin 0 auto
    .info
      margin-top 5rem
      p
        color #666
        line-height 24px
    .donation-img
      margin-top 50px
      width 800px
      height 435px
      background url("../images/donate.webp") no-repeat 0 0;
      background-size contain

